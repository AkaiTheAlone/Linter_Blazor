@inherits LayoutComponentBase
@inject IToastService Toast
<style>
    .centralizado {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 50px;
    }
</style>
<FluentDialogProvider />

<FluentLayout>
    <FluentHeader>
        Linter
        <div style="margin-left:auto">
            <img src="/imagens/ldn_logo.png" width="100" height="60" />
        </div>
    </FluentHeader>

    <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">

        <NavMenu />
        <FluentBodyContent Class="body-content">
            <div class="content">
                @Body
            </div>

        </FluentBodyContent>
    </FluentStack>

    <AuthorizeView>
        <NotAuthorized>

        </NotAuthorized>
        <Authorized>

        </Authorized>
    </AuthorizeView>
    <FluentToastProvider RemoveToastsOnNavigation="false" Position="ToastPosition.TopStart" MaxToastCount="10" />
</FluentLayout>


<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
